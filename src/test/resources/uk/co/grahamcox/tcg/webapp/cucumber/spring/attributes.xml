<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="attributeResponseMatcher" class="uk.co.grahamcox.tcg.webapp.cucumber.matcher.ResponseMatcher">
        <constructor-arg name="requester" ref="requester" />
        <constructor-arg name="fieldMapping">
            <map>
                <entry key="ID" value="identity/id" />
                <entry key="Name" value="name" />
                <entry key="Description" value="description" />
            </map>
        </constructor-arg>
    </bean>

    <bean id="attributeSeeder" class="uk.co.grahamcox.tcg.webapp.cucumber.attributes.AttributeSeeder">
        <constructor-arg name="database" ref="mongoDb" />
    </bean>

    <bean id="listAttributesUrlBuilder" class="uk.co.grahamcox.tcg.webapp.cucumber.UrlBuilder">
        <constructor-arg name="baseUrl" value="/api/attributes" />
        <constructor-arg name="queryStringMappings">
            <map>
                <entry key="Sort" value="sort" />
                <entry key="Offset" value="offset" />
                <entry key="Count" value="count" />
            </map>
        </constructor-arg>
        <constructor-arg name="pathMappings"><map /></constructor-arg>
    </bean>
</beans>