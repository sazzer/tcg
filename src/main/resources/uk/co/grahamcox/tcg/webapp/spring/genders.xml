<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="genderResourceDataTranslator" class="uk.co.grahamcox.tcg.webapp.api.translator.ResourceDataTranslatorImpl">
        <constructor-arg name="resourceIdentityTranslator">
            <bean class="uk.co.grahamcox.tcg.webapp.api.translator.ResourceIdentityTranslatorImpl">
                <constructor-arg name="type" value="genders" />
            </bean>
        </constructor-arg>
        <constructor-arg name="resourceAttributesTranslator">
            <bean class="uk.co.grahamcox.tcg.webapp.genders.GenderTranslator" />
        </constructor-arg>
        <constructor-arg name="resourceLinksTranslator">
            <bean class="uk.co.grahamcox.tcg.webapp.api.translator.ResourceLinksTranslatorImpl">
                <constructor-arg name="selfTranslator">
                    <bean class="uk.co.grahamcox.tcg.webapp.api.translator.MvcLinkBuilder">
                        <constructor-arg name="controller" value="uk.co.grahamcox.tcg.webapp.genders.GendersController"/>
                        <constructor-arg name="methodName" value="getGender" />
                        <constructor-arg name="parameterBuilder">
                            <bean class="uk.co.grahamcox.tcg.webapp.api.translator.IdParameterBuilder" />
                        </constructor-arg>
                    </bean>
                </constructor-arg>
            </bean>
        </constructor-arg>
        <constructor-arg name="relationshipTranslators">
            <map>
                <entry key="race">
                    <bean class="uk.co.grahamcox.tcg.webapp.api.translator.SingleRelationshipTranslatorImpl">
                        <constructor-arg name="relationshipDataBuilder">
                            <bean class="uk.co.grahamcox.tcg.webapp.api.translator.RelationshipDataBuilderImpl">
                                <constructor-arg name="relationshipIdentityBuilder">
                                    <bean class="uk.co.grahamcox.tcg.webapp.api.translator.RelationshipIdentityBuilderImpl">
                                        <constructor-arg name="type" value="races" />
                                        <constructor-arg name="relationshipIdExtractor">
                                            <bean class="uk.co.grahamcox.tcg.webapp.genders.RaceIdExtractor" />
                                        </constructor-arg>
                                    </bean>
                                </constructor-arg>
                            </bean>
                        </constructor-arg>
                        <constructor-arg name="relationshipLinksTranslator">
                            <bean class="uk.co.grahamcox.tcg.webapp.api.translator.RelationshipLinksTranslatorImpl">
                                <constructor-arg name="selfTranslator">
                                    <bean class="uk.co.grahamcox.tcg.webapp.api.translator.MvcLinkBuilder">
                                        <constructor-arg name="controller" value="uk.co.grahamcox.tcg.webapp.races.RacesController" />
                                        <constructor-arg name="methodName" value="getRace" />
                                        <constructor-arg name="parameterBuilder">
                                            <bean class="uk.co.grahamcox.tcg.webapp.genders.GetGenderRaceParameterBuilder" />
                                        </constructor-arg>
                                    </bean>
                                </constructor-arg>
                            </bean>
                        </constructor-arg>
                    </bean>
                </entry>
            </map>
        </constructor-arg>
    </bean>

    <bean class="uk.co.grahamcox.tcg.webapp.genders.GendersController">
        <constructor-arg name="gendersRetriever" ref="gendersRetriever" />
        <constructor-arg name="resourceTranslator">
            <bean class="uk.co.grahamcox.tcg.webapp.api.translator.ResourceTranslatorImpl">
                <constructor-arg name="resourceDataTranslator" ref="genderResourceDataTranslator" />
            </bean>
        </constructor-arg>
        <constructor-arg name="resourceCollectionTranslator">
            <bean class="uk.co.grahamcox.tcg.webapp.api.translator.ResourceCollectionTranslatorImpl">
                <constructor-arg name="resourceTranslator" ref="genderResourceDataTranslator" />
                <constructor-arg name="paginationTranslator" ref="paginationTranslator" />
                <constructor-arg name="resourceCollectionLinksTranslator">
                    <bean class="uk.co.grahamcox.tcg.webapp.api.translator.ResourceCollectionLinksTranslatorImpl">
                        <constructor-arg name="selfTranslator">
                            <bean class="uk.co.grahamcox.tcg.webapp.api.translator.SelfLinkBuilder" />
                        </constructor-arg>
                    </bean>
                </constructor-arg>
            </bean>
        </constructor-arg>
    </bean>
</beans>