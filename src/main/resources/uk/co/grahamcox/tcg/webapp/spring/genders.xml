<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="genderTranslator" class="uk.co.grahamcox.tcg.webapp.genders.GenderTranslator" />

    <bean class="uk.co.grahamcox.tcg.webapp.genders.GendersController">
        <constructor-arg name="gendersRetriever" ref="gendersRetriever" />
        <constructor-arg name="modelTranslator">
            <bean class="uk.co.grahamcox.tcg.webapp.ResponseTranslator">
                <constructor-arg name="modelTranslator" ref="genderTranslator" />
            </bean>
        </constructor-arg>
        <constructor-arg name="pageTranslator">
            <bean class="uk.co.grahamcox.tcg.webapp.PageTranslator">
                <constructor-arg name="modelTranslator" ref="genderTranslator" />
            </bean>
        </constructor-arg>
    </bean>
</beans>