<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="userResourceDataTranslator" class="uk.co.grahamcox.tcg.webapp.api.translator.ResourceDataTranslatorImpl">
        <constructor-arg name="resourceIdentityTranslator">
            <bean class="uk.co.grahamcox.tcg.webapp.api.translator.ResourceIdentityTranslatorImpl">
                <constructor-arg name="type" value="users" />
            </bean>
        </constructor-arg>
        <constructor-arg name="resourceAttributesTranslator">
            <bean class="uk.co.grahamcox.tcg.webapp.users.UserTranslator" />
        </constructor-arg>
        <constructor-arg name="resourceLinksTranslator">
            <bean class="uk.co.grahamcox.tcg.webapp.api.translator.ResourceLinksTranslatorImpl">
                <constructor-arg name="selfTranslator">
                    <bean class="uk.co.grahamcox.tcg.webapp.api.translator.MvcLinkBuilder">
                        <constructor-arg name="controller" value="uk.co.grahamcox.tcg.webapp.users.UserController"/>
                        <constructor-arg name="methodName" value="getUser" />
                        <constructor-arg name="parameterBuilder">
                            <bean class="uk.co.grahamcox.tcg.webapp.api.translator.IdParameterBuilder" />
                        </constructor-arg>
                    </bean>
                </constructor-arg>
            </bean>
        </constructor-arg>
        <constructor-arg name="relationshipTranslators"><null /></constructor-arg>

    </bean>

    <bean class="uk.co.grahamcox.tcg.webapp.users.UserController">
        <constructor-arg name="userRetriever" ref="userRetriever" />
        <constructor-arg name="resourceTranslator">
            <bean class="uk.co.grahamcox.tcg.webapp.api.translator.ResponseEntityResourceTranslatorWrapper">
                <constructor-arg name="translator">
                    <bean class="uk.co.grahamcox.tcg.webapp.api.translator.ResourceTranslatorImpl">
                        <constructor-arg name="resourceDataTranslator" ref="userResourceDataTranslator" />
                    </bean>
                </constructor-arg>
            </bean>
        </constructor-arg>
    </bean>
</beans>