<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="statDao" class="uk.co.grahamcox.tcg.attributes.StatsDaoMongoImpl">
        <constructor-arg name="clock" ref="clock" />
        <constructor-arg name="db" ref="mongoDb" />
    </bean>

    <bean id="statRetriever" class="uk.co.grahamcox.tcg.model.DaoRetriever">
        <constructor-arg name="dao" ref="statDao" />
    </bean>
</beans>